@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> @ViewBag.dpers Departman Personeli</li>
</ol>
<table class="table table-condensed">
    <tr>
     
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.Urun.UrunAd</td>
                    <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                    <td>@x.Fiyat ₺</td>
                    <td>@x.Adet</td>
                    <td>@x.ToplamTutar</td>
                    <td>@x.Tarih</td>
                    <td><a href="#" class="btn btn-secondary" style="background-color:dimgrey">Yazdır</a></td>
                </tr>
            }
</table>
