@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Class2
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script>

    $(function () {

        $('#DrpKategori').change(function () {

            var id = $('#DrpKategori').val();

            $.ajax({

                url: '/Kategori/UrunGetir',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpUrunler').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpUrunler').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>

<br />
<div>
    <h2>Kategoriler - Ürünler</h2>
</div>
<br />
<div>
    @Html.Label("Kategoriler")
    @Html.DropDownList("DrpKategori" ,Model.Kategoriler, "---Kategori Seçin---", new {@class="form-control"})
    <br />
    @Html.Label("Ürünler")
    @Html.DropDownList("DrpUrunler" ,Model.Urunler, "---Ürün Seçin---", new {@class="form-control"} )
</div>
